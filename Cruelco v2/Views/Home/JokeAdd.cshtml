@model Cruelco_v2.Models.JokeViewModel
@{
    var isEditMode = Model?.JokeId != null;
    ViewBag.Title = isEditMode ? "Edit " + Model.CompleteJoke : "Add Person";
}

<h2>AddEditJoke</h2>


<h2>@Model.CompleteJoke</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm(isEditMode ? "EditJoke" : "JokeAdd", "Home"))
        {
            @Html.HiddenFor(m => m.JokeId)
            <div class="form-group">
                @Html.LabelFor(m => m.Opener)
                @Html.TextBoxFor(m => m.Opener, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Punchline)
                @Html.TextBoxFor(m => m.Punchline, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>